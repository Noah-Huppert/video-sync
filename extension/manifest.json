{
    "manifest_version": 2,
    "name": "Video Sync",
    "version": "1.0",
    "description": "Sync video between friends",
    "icons": {
	   "48": "icon48.png"
    },
    "permissions": [
	   "storage"
    ],
    "content_scripts": [
	   {
		  "matches": ["*://*.netflix.com/*"],
		  "js": ["common.js", "viewer.js"]
	   }
    ],
    "sidebar_action": {
	   "default_icon": "icon48.png",
	   "default_title": "Video Sync",
	   "default_panel": "panel.html"
    }
}
